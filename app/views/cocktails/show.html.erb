<%= render 'shared/navbar' %>
<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |d| %>
    <%= "#{d.ingredient.name}: #{d.description}" %>
    <br>
  <% end %>

  <%= simple_form_for [@cocktail, @dose], url: cocktail_doses_path(@cocktail) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>


    <%= f.button :submit %>
  <% end %>

  <%= link_to 'Add ingredient',  new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'Home', cocktails_path  %>
</div>
