<%= render 'shared/navbar' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/cwhight/image/upload/v1573819641/assorted-wine-bottles-1283219_jg25dt.jpg);">
  <div class="container">
    <h1>Cocktails are great</strong>!</h1>
    <p>Change your life and learn to make cocktails.</p>
     <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#exampleModalCenter">
    Create New Cocktail
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Your New Cocktail</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
              <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :description, as: :text %>
      <%= f.input :photo, as: :file, class: "btn btn-ghost"%>
      <%= f.button :submit, "Create Cocktail", class: "btn btn-flat" %>
    <%=  %>
    <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-ghost" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-flat">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>


<div class="container pt-3">
  <!-- Button trigger modal -->


  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
      <input class="form-control string required" placeholder="Search by Ingredient"type="text" name="query" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
   <h1><%= @no_results %></h1>
   <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-12 col-md-6">

        <div data-aos="fade-up" class="card-product">
          <% if c.photo.attached? %>
            <%= cl_image_tag c.photo.key %>
           <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <% end %>
          <div class="card-product-infos">
            <h2><%= link_to "#{c.name}", cocktail_path(c)   %></h2>
            <p><%= c.description %></p>
          </div>
        </div>
      </div>

    <% end %>
   </div>

