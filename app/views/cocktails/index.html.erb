<%= render 'shared/navbar' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Cocktails are great</strong>!</h1>
    <p>Change your life and learn to make cocktails.</p>
    <%= link_to 'Create new cocktail', new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container pt-3">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
      <input class="form-control string required" placeholder="Search by Ingredient"type="text" name="query" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
   <h1><%= @no_results %></h1>
  <% @cocktails.each do |c| %>

  <div data-aos="fade-up" class="card-product">
    <% if c.photo.attached? %>
      <%= cl_image_tag c.photo.key %>
     <% else %>
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <% end %>
    <div class="card-product-infos">
      <h2><%= link_to "#{c.name}", cocktail_path(c)   %></h2>
      <p><%= c.description %></p>
    </div>
  </div>

  <% end %>

