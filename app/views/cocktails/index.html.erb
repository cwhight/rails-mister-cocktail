<%= render 'shared/navbar' %>
<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |c| %>

  <div class="card-product">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2><%= link_to "#{c.name}", cocktail_path(c)   %></h2>
    </div>
  </div>

  <% end %>

  <%= link_to 'Create new cocktail', new_cocktail_path, class: "btn btn_flat" %>
</div>
